<header class="page-header">
  <h1>Create New User</h1>
</header>
<div class="details" style="border: 2px solid black">
<form action="/users" method="post">

  <!-- User -->
  <div class="form-group">
    <label for="user_username">Username</label>
    <input type="text" class="form-control" id="user_username" name="user[username]">
  </div>

  <div class="form-group">
    <label for="user_fname">First Name</label>
    <input type="text" class="form-control" id="user_fname" name="user[fname]">
  </div>

  <div class="form-group">
    <label for="">Last Name</label>
    <input type="text" class="form-control" id="user_lname" name="user[lname]">
  </div>

  <div class="form-group">
    <label for="">Email</label>
    <input type="email" class="form-control" id="user_email" name="user[email]">
  </div>


  <!-- User Profile Gender -->
  <div class="form-group">
    <label>Gender</label>
    <div class="radio">
      <label>
        <input type="radio" value="m" name="user[profile][gender]"checked="checked"> Male
      </label>
      <label>
        <input type="radio" value="f" name="user[profile][gender]"> Female
      </label>
    </div>
  </div>

  <div class="form-group">
    <label for="user_profile_aboutme">About Me</label>
    <input type="text" class="form-control" id="user_profile_aboutme" name="user[profile][aboutme]">
  </div>

  <div class="form-group">
    <label for="user_profile_talents">Talents</label>
    <input type="text" class="form-control" id="user_profile_talents" name="user[profile][talents]">
  </div>

  <div class="form-group">
    <label for="user_profile_favorites">Favorite Things</label>
    <input type="text" class="form-control" id="user_profile_favorites" name="user[profile][favorites]">
  </div>

  <div class="form-group">
    <label for="user_profile_whymessage">Why Message Me?</label>
    <input type="text" class="form-control" id="user_profile_whymessage" name="user[profile][whymessage]">
  </div>

  <div class="form-group">
    <label for="user_profile_martial">Marital Status</label>
    <input type="text" class="form-control" id="user_profile_martial" name="user[profile][martial]">
  </div>

  <div class="form-group">
    <label for="user_profile_height">Height</label>
    <input type="number" class="form-control" id="user_profile_height" name="user[profile][height]"
    required>
  </div>

  <div class="form-group">
    <label for="user_profile_body">Body Type</label>
    <input type="text" class="form-control" id="user_profile_body" name="user[profile][body]">
  </div>

  <div class="form-group">
    <label for="user_profile_children">Children</label>
    <input type="text" class="form-control" id="user_profile_children" name="user[profile][children]" required>
  </div>

  <div class="form-group">
    <label for="user_profile_height">Occupation</label>
    <input type="text" class="form-control" id="user_profile_occupation" name="user[profile][occupation]">
  </div>
 <button type="submit" class="btn btn-primary" style="margin-left: 10px">Submit</button>
    </form>
    </div>
